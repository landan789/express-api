<div class="chsr modal fade ticket-modal" id="ticketAddModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">新增待辦</h4>
            </div>
            <div class="modal-body">
                <form class="px-2">
                    <div class="form-group select-app-container">
                        <label for="app" class="col-form-label font-weight-bold">聊天機器人:</label>
                        <select class="form-control" id="add-form-app">
                            <option value="">載入中</option>
                        </select>
                    </div>

                    <!-- 客戶姓名 -->
                    <div class="form-group">
                        <label for="name" class="col-form-label font-weight-bold">客戶姓名:</label>
                        <select class="form-control" id="add-form-name">
                            <option value="">無資料</option>
                        </select>
                    </div>

                    <!-- 客戶Id -->
                    <div class="form-group">
                        <label for="subject" class="col-form-label font-weight-bold">客戶ID:</label>
                        <div class="input-container">
                            <input class="form-control" type="text" id="add-form-uid" readonly>
                        </div>
                    </div>

                    <!-- email -->
                    <div class="form-group">
                        <label for="email" class="col-form-label font-weight-bold">電子郵件:</label>
                        <div class="input-container">
                            <input class="form-control" type="text" id="add-form-email" readonly>
                        </div>
                    </div>
    
                    <!-- phone -->
                    <div class="form-group">
                        <label for="phone" class="col-form-label font-weight-bold">手機:</label>
                        <div class="input-container">
                            <input class="form-control" type="text" id="add-form-phone" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="assigned-name" class="col-form-label font-weight-bold">指派人:</label>
                        <select class="form-control" id="assigned-name">
                            <option value="">無資料</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="add-form-status" class="col-form-label font-weight-bold">狀態:</label>
                        <select class="form-control" id="add-form-status">
                            <option value="2">未處理</option>
                            <option value="3">處理中</option>
                            <option value="4">已解決</option>
                            <option value="5">已關閉</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="add-form-priority" class="col-form-label font-weight-bold">優先:</label>
                        <select class="form-control" id="add-form-priority">
                            <option value="1">低</option>
                            <option value="2">中</option>
                            <option value="3">高</option>
                            <option value="4">急</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="add-form-description" class="col-form-label font-weight-bold">描述:</label>
                        <textarea class="form-control" id="add-form-description" rows="5"></textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="addTicketBtn">新增</button>
            </div>
        </div>
    </div>
</div>